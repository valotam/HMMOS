{
    "version": "2.0.0",
    "runner": "terminal",
    "echoCommand": true,
    "tasks": [
        // Compile for C
        {
            "label": "C build for linux",
            "command": "gcc",
            "args": [
                "${file}",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
        },
        // Compile for C++
        {
            "label": "C++ build for linux",
            "command": "g++",
            "args": [
                "${file}",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
        },
        {
            "label": "C++ build for windows",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },

        // Run binary
        {
            "label": "execute for linux",
            "command": "sh",
            "group": "test",
            "args": [
                "-c", "${fileDirname}/${fileBasenameNoExtension}"
            ]
        },
        {
            "label": "execute for windows",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}